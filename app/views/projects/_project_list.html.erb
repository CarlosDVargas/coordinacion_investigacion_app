<table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th scope="col">Código</th>
              <th scope="col">Nombre</th>
              <th scope="col">Acción</th>
            </tr>
          </thead>
          <tbody>
            <% projects.each do |project| %>
              <tr>
                <td><%= project.code %></td>
                <td><%= project.name %></td>
                <td><%= link_to "Mostrar proyecto", project,
                                class: "btn btn-sm btn-info" %> | 
                    <%= link_to "Editar proyecto", edit_project_path(project), class: "btn btn-sm btn-success" %> | 
                    <%= link_to "Eliminar proyecto", project, data: { turbo_method: :delete, turbo_confirm: "¿Eliminar este registro?" },
                                                               class: "btn btn-sm btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
</table>